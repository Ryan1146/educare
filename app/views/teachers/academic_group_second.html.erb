</ul>


</br>

<div class="row">

	<div class="alert text-center alert-success">
  <h4><strong>台/新北市</strong></h4>
	</div>

	<% @north_teachers.each do |teacher| %>

		<div class="col-md-3">
			
			<div class="col-md-12 panel panel-default">
			  
			  <div class="panel-heading center">
			  	<%= teacher.background %></br>
			  	<%= teacher.name %>
			  </div>

			  <div class="panel-body">
			    <%= image_tag(teacher.image.url(:medium), class: "img-avatar img-rounded") %>
			  </div>
			
				<div class="panel-footer">
					教學內容：</br>
					<%= simple_format(teacher.expertise) %>
					<div class="center">
						<%= link_to('聯絡老師', new_teacher_student_path(teacher) , :class => "btn btn-primary" )%>
					</div>
				</div>

			</div>
		</div><!-- col-md-4 -->
	<%end%>
</div>



